# GDLint configuration for Scrap Survivor Godot project
# See: https://github.com/Scony/godot-gdscript-toolkit

# Disable problematic or noisy checks
disable:
  - class-definitions-order
  - max-public-methods
  - function-arguments-number

# Allow longer lines for descriptive comments and documentation
max-line-length: 120

# Allow more complex functions during migration
max-returns: 6
max-branches: 12
max-statements: 50
